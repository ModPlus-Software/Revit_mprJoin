<UserControl x:Class="mprJoin.Views.Controls.JoinControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:mprJoin.Views.Controls"
             xmlns:converters="clr-namespace:ModPlusAPI.Converters;assembly=ModPlusAPI"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:mprJoin.Models"
             xmlns:mps="https://modplus.org/winfx/xaml/controls"
             xmlns:options="clr-namespace:mprJoin.Enums"
             xmlns:vm="clr-namespace:mprJoin.ViewModels"
             Name="ThisControl"
             d:DataContext="{d:DesignInstance vm:JoinContext}"
             mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ModPlusStyle;component/Styles/Controls.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:EnumToIntConverter x:Key="EnumToIntConverter" />
            <XmlDataProvider x:Key="Lang" Source="E:/ModPlus/Languages/en-US.xml" XPath="ModPlus/mprJoin" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        
        <!-- Combobox с сохранениями -->
        <Grid Grid.Row="0"
              Grid.Column="0"
              Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Grid.Column="0"
                       Grid.ColumnSpan="3"
                       HorizontalAlignment="Center"
                       Text="{Binding Source={StaticResource Lang}, XPath=h10}" />

            <ComboBox Grid.Row="1"
                      Grid.Column="0"
                      ItemsSource="{Binding Configurations}"
                      SelectedItem="{Binding CurrentConfiguration}">
                <ComboBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:SavedJoinConfigurations}">
                        <TextBox IsEnabled="{Binding IsEditable}"
                                 Text="{Binding Path=Name, Mode=TwoWay}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <Button Grid.Row="1"
                    Grid.Column="1"
                    Margin="0 4 4 4"
                    HorizontalAlignment="Right"
                    Command="{Binding Path=AddConfiguration}"
                    CommandParameter="{Binding}"
                    ToolTip="{Binding Source={StaticResource Lang}, XPath=tp3}"
                    Style="{StaticResource ModPlusFlatButtonForIcon}">
                <Viewbox Width="24"
                         Height="24">
                    <Canvas Width="24"
                            Height="24">
                        <Path Data="M12,20C7.59,20 4,16.41 4,12C4,7.59 7.59,4 12,4C16.41,4 20,7.59 20,12C20,16.41 16.41,20 12,20M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M13,7H11V11H7V13H11V17H13V13H17V11H13V7Z"
                              Fill="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Button}, Path=Foreground}" />
                    </Canvas>
                </Viewbox>
            </Button>

            <Button Grid.Row="1"
                    Grid.Column="2"
                    MinWidth="0"
                    ToolTip="{Binding Source={StaticResource Lang}, XPath=tp4}"
                    Command="{Binding DeleteConfiguration}">
                <Viewbox Width="24"
                         Height="24">
                    <Canvas Width="24"
                            Height="24">
                        <Path Data="M15,16H19V18H15V16M15,8H22V10H15V8M15,12H21V14H15V12M3,18A2,2 0 0,0 5,20H11A2,2 0 0,0 13,18V8H3V18M14,5H11L10,4H6L5,5H2V7H14V5Z"
                              Fill="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Button}, Path=Foreground}" />
                    </Canvas>
                </Viewbox>
            </Button>
        </Grid>
        
        <StackPanel
            Grid.Row="1"
            Grid.Column="1">
            <!--Кнопка добавления пар-->
            <Button Grid.Row="1"
                    Grid.Column="1"
                    Margin="0 4 12 4"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Command="{Binding DataContext.AddPair, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}"
                    Style="{StaticResource ModPlusFlatButtonForIcon}"
                    ToolTip="{Binding Source={StaticResource Lang}, XPath=tp1}">
                <Viewbox Width="24"
                         Height="24">
                    <Canvas Width="24"
                            Height="24">
                        <Path Data="M12,20C7.59,20 4,16.41 4,12C4,7.59 7.59,4 12,4C16.41,4 20,7.59 20,12C20,16.41 16.41,20 12,20M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M13,7H11V11H7V13H11V17H13V13H17V11H13V7Z"
                              Fill="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Button}, Path=Foreground}" />
                    </Canvas>
                </Viewbox>
            </Button>
        
            <!--Кнопка перемещение пары вверх-->
            <Button Grid.Row="1"
                    Grid.Column="1"
                    Margin="0 4 12 4"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    CommandParameter="{Binding ElementName=ListBoxWithPairs, Path=SelectedItem}"
                    Command="{Binding DataContext.ReplaceUp, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}"
                    Style="{StaticResource ModPlusFlatButtonForIcon}">
                <Viewbox Width="24" Height="24">
                    <Canvas Width="24" Height="24">
                        <Path Fill="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Button}, Path=Foreground}" Data="M16,13V21H8V13H2L12,3L22,13H16M7,11H10V19H14V11H17L12,6L7,11Z" />
                    </Canvas>
                </Viewbox>
            </Button>
        
            <!--Кнопка кнопка перемещения пары вниз-->
            <Button Grid.Row="1"
                    Grid.Column="1"
                    Margin="0 4 12 4"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    CommandParameter="{Binding ElementName=ListBoxWithPairs, Path=SelectedItem}"
                    Command="{Binding DataContext.ReplaceDown, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}"
                    Style="{StaticResource ModPlusFlatButtonForIcon}">
                <Viewbox Width="24" Height="24">
                    <Canvas Width="24" Height="24">
                        <Path Fill="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Button}, Path=Foreground}" Data="M22,11L12,21L2,11H8V3H16V11H22M12,18L17,13H14V5H10V13H7L12,18Z" />
                    </Canvas>
                </Viewbox>
            </Button>
        </StackPanel>
        
        <!--ListBox с парами-->
        <ListBox Grid.Row="1"
                 Grid.Column="0"
                 Name="ListBoxWithPairs"
                 mps:RippleAssist.IsDisabled="True"
                 ItemsSource="{Binding Path=CurrentConfiguration.Pairs}">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type models:CustomElementPair}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0"
                              Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Кнопка управления видимости фильтров -->
                            <Button Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="0 4 4 4"
                                    Command="{Binding DataContext.ChangeVisibilityForFilters, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}"
                                    CommandParameter="{Binding}"
                                    ToolTip="{Binding Source={StaticResource Lang}, XPath=tp4}"
                                    Style="{StaticResource ModPlusFlatButtonForIcon}">
                                <Viewbox Width="24"
                                         Height="24">
                                    <Canvas Width="24"
                                            Height="24">
                                        <Path Data="M2,16H10V14H2M18,14V10H16V14H12V16H16V20H18V16H22V14M14,6H2V8H14M14,10H2V12H14V10Z"
                                              Fill="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Button}, Path=Foreground}" />
                                    </Canvas>
                                </Viewbox>
                            </Button>
                            
                            <ComboBox Grid.Row="0"
                                      Grid.Column="1"
                                      ItemsSource="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}, Path=DataContext.StringSelectedCategories}"
                                      SelectedItem="{Binding WhatToJoinCategory}" />

                            <!-- Стрелка -->
                            <Viewbox Grid.Row="0"
                                     Grid.Column="2"
                                     Width="24"
                                     Height="24"
                                     Margin="0 4 0 0"
                                     VerticalAlignment="Top">
                                <Canvas Width="24"
                                        Height="24">
                                    <Path Data="M3,8H5V16H3V8M7,8H9V16H7V8M11,8H13V16H11V8M15,19.25V4.75L22.25,12L15,19.25Z"
                                          Fill="{StaticResource DarkGrayBrush}" />
                                </Canvas>
                            </Viewbox>
                            
                            <Grid
                                Grid.Column="0"
                                Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Добавление главных фильтров -->
                                <Button Grid.Row="0"
                                        Grid.Column="0"
                                        Margin="0 4 0 4"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Command="{Binding DataContext.AddFilterMainFilter, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}"
                                        CommandParameter="{Binding}"
                                        ToolTip="{Binding Source={StaticResource Lang}, XPath=tp5}"
                                        Style="{StaticResource ModPlusFlatButtonForIcon}"
                                        Visibility="{Binding ShowFilters, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <Viewbox Width="24"
                                             Height="24">
                                        <Canvas Width="24"
                                                Height="24">
                                            <Path Data="M12,20C7.59,20 4,16.41 4,12C4,7.59 7.59,4 12,4C16.41,4 20,7.59 20,12C20,16.41 16.41,20 12,20M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M13,7H11V11H7V13H11V17H13V13H17V11H13V7Z"
                                                  Fill="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Button}, Path=Foreground}" />
                                        </Canvas>
                                    </Viewbox>
                                </Button>
                                
                                <!-- Block с Or And -->
                                <ComboBox Grid.Row="1"
                                          Grid.Column="0"
                                          Margin="0"
                                          VerticalAlignment="Center"
                                          mps:ComboBoxAssist.IsBorderless="True"
                                          ToolTip="{Binding Source={StaticResource Lang}, XPath=tp6}"
                                          SelectedIndex="{Binding LogicCondition, Converter={StaticResource EnumToIntConverter}, ConverterParameter={x:Type options:LogicCondition}, Mode=TwoWay}"
                                          Visibility="{Binding ShowFilters, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <ComboBoxItem Content="{Binding Source={StaticResource Lang}, XPath=op1}" />
                                    <ComboBoxItem Content="{Binding Source={StaticResource Lang}, XPath=op2}" />
                                </ComboBox>
                            </Grid>
                            
                            <!-- ListBox c фильтрами для основной категории -->
                            <ListBox Grid.Row="1"
                                     Grid.Column="1"
                                     Grid.ColumnSpan="2"
                                     Margin="20 0 25 0"
                                     ItemsSource="{Binding FiltersForMainCategory}"
                                     Visibility="{Binding ShowFilters, Converter={StaticResource BooleanToVisibilityConverter}}"
                                     mps:ListBoxAssist.ListBoxItemPadding="0"
                                     Background="Transparent"
                                     BorderThickness="0">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <controls:FilterInputFormControl FilterModel="{Binding}"
                                                                         RemoveCommand="{Binding Source={x:Reference ThisControl}, Path=DataContext.RemoveFilter}" />
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>

                        <Grid 
                            Grid.Row="0"
                            Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <controls:WithWhatToJoinControl Grid.Row="0"
                                                            Grid.Column="0"
                                                            Storage="{Binding}" />
                            
                            <Button Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="0 4 4 4"
                                    Command="{Binding DataContext.RemovePair, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}"
                                    CommandParameter="{Binding}"
                                    ToolTip="{Binding Source={StaticResource Lang}, XPath=tp7}"
                                    Style="{StaticResource ModPlusFlatButtonForIcon}">
                                <Viewbox Width="24"
                                         Height="24">
                                    <Canvas Width="24"
                                            Height="24">
                                        <Path Data="M12,20C7.59,20 4,16.41 4,12C4,7.59 7.59,4 12,4C16.41,4 20,7.59 20,12C20,16.41 16.41,20 12,20M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M7,13H17V11H7"
                                              Fill="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Button}, Path=Foreground}" />
                                    </Canvas>
                                </Viewbox>
                            </Button>
                            
                            <Grid
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- ListBox c фильтрами для вспомогательных категорий -->
                                <ListBox Grid.Row="0"
                                         Grid.Column="1"
                                         Margin="20 0 0 0"
                                         ItemsSource="{Binding FilterModelsForSubCategories}"
                                         Visibility="{Binding ShowFilters, Converter={StaticResource BooleanToVisibilityConverter}}"
                                         mps:ListBoxAssist.ListBoxItemPadding="0"
                                         Background="Transparent"
                                         BorderThickness="0">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <controls:FilterInputFormControl FilterModel="{Binding}"
                                                                             RemoveCommand="{Binding Source={x:Reference ThisControl}, Path=DataContext.RemoveFilter}" />
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                                
                                <!-- Добавление вспомогательных фильтров -->
                                <Button Grid.Row="0"
                                        Grid.Column="0"
                                        Margin="0  4"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Command="{Binding DataContext.AddFilterSubFilter, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}"
                                        CommandParameter="{Binding}"
                                        ToolTip="{Binding Source={StaticResource Lang}, XPath=tp8}"
                                        Style="{StaticResource ModPlusFlatButtonForIcon}"
                                        Visibility="{Binding ShowFilters, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <Viewbox Width="24"
                                             Height="24">
                                        <Canvas Width="24"
                                                Height="24">
                                            <Path Data="M12,20C7.59,20 4,16.41 4,12C4,7.59 7.59,4 12,4C16.41,4 20,7.59 20,12C20,16.41 16.41,20 12,20M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M13,7H11V11H7V13H11V17H13V13H17V11H13V7Z"
                                                  Fill="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Button}, Path=Foreground}" />
                                        </Canvas>
                                    </Viewbox>
                                </Button>
                            </Grid>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <Grid 
            Grid.Row="2" 
            Grid.Column="0" 
            Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!-- Combobox с опциями -->
            <ComboBox Grid.Row="0"
                      Grid.Column="0"
                      HorizontalAlignment="Right"
                      SelectedIndex="{Binding Option, Converter={StaticResource EnumToIntConverter}, ConverterParameter={x:Type options:ContiguityOption}, Mode=TwoWay}">
                <ComboBoxItem Content="{Binding Source={StaticResource Lang}, XPath=h2}" />
                <ComboBoxItem Content="{Binding Source={StaticResource Lang}, XPath=h3}" />
            </ComboBox>
        
            <controls:SelectionOptionsButtonControl Grid.Row="0"
                                                    Grid.Column="1"
                                                    HorizontalAlignment="Left"
                                                    ButtonText="{Binding Source={StaticResource Lang}, XPath=h9}"
                                                    ExecuteCommand="{Binding Path=Execute}" />
        </Grid>

    </Grid>
</UserControl>

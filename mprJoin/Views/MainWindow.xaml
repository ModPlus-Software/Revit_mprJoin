<mps:ModPlusWindow x:Class="mprJoin.Views.MainWindow"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:local="clr-namespace:mprJoin"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:mps="https://modplus.org/winfx/xaml/controls"
                   xmlns:localControls="clr-namespace:mprJoin.Views.Controls"
                   SizeToContent="WidthAndHeight"
                   ResizeMode="CanResizeWithGrip"
                   mc:Ignorable="d"
                   d:DataContext="{d:DesignInstance local:MainContext, IsDesignTimeCreatable=False}">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ModPlusStyle;component/Styles/Controls.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <XmlDataProvider x:Key="Lang" Source="E:/ModPlus/Languages/en-US.xml" XPath="ModPlus/mprJoin" />
            <XmlDataProvider x:Key="LangCommon" Source="E:/ModPlus/Languages/en-US.xml" XPath="ModPlus/Common" />
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
            Orientation="Horizontal">
            
            <localControls:NavigateButton 
                Height="25"
            Width="150"
            Content="{Binding Source={StaticResource Lang}, XPath=btnN1}"
            Frame="{Binding ElementName=MainFrame}"
            NavigateUri="pack://application:,,,/mprJoin_2019;component/Views/Pages/ContiguityPage.xaml"/>
            
            <localControls:NavigateButton 
                Height="25"
            Width="150"
            Content="{Binding Source={StaticResource Lang}, XPath=btnN2}"
            Frame="{Binding ElementName=MainFrame}"
            NavigateUri="pack://application:,,,/mprJoin_2019;component/Views/Pages/JoinPage.xaml"/>
        </StackPanel>

        <Frame 
            Grid.Row="1"
            Name="MainFrame"
            Source="/mprJoin_2019;component/Views/Pages/ContiguityPage.xaml"
            Navigated="MainFrame_Navigated"
            NavigationUIVisibility="Hidden"
            Opacity="1"
            BorderThickness="0"
            BorderBrush="Transparent"/>
    </Grid>
</mps:ModPlusWindow>
